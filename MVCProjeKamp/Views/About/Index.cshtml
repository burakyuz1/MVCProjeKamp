@model List<EntityLayer.Concrate.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1></h1>
            </div>
        </div>
    </div> 
</section>
<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title" >About Page</h3>
           
            <div class="card-tools">


                <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-target="#modal-secondary">
                    <i class="fas fa-plus-circle"></i> Add New AboutText
                </button>

            </div>
        </div>

        <!--CARD BODY-->
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>About Text</th>
                        <th>Active</th>
                        <th>Deative</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var about in Model)
                    {
                        <tr>
                            <th>@about.AboutID</th>
                            <td>@about.AboutDetails1  @about.AboutDetails2</td>
                            <td>
                                <!--Active Button-->
                                <a class="btn btn-outline-primary btn-sm" href="#">
                                    <i class="fas fa-check-circle">
                                    </i>
                                    Enable
                                </a>
                            </td>
                            <td>
                                <!--Deactive Button-->
                                <a class="btn btn-outline-danger btn-sm" href="#">
                                    <i class="fas fa-times-circle">
                                    </i>
                                    Disable
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>

@Html.Action("AddAboutModalPartial", "About")

