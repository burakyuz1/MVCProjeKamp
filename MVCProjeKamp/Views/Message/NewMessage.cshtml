@model EntityLayer.Concrate.Message
@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Message Page</h1>
            </div>

        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            @Html.Action("getSideBarForMessage", "Contact")

            <div class="col-md-9">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Compose New Message</h3>
                    </div>
                    <!-- /.card-header -->

                    @using (Html.BeginForm("SendMessage", "Message", FormMethod.Post))
                    {<div class="card-body">
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.MessageReciever, new { @class = "form-control", placeholder = "To:" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.MessageSubject, new { @class = "form-control", placeholder = "Subject:" })
                            </div>
                            <div class="form-group">
                                @*id="compose-textarea"*@
                                <textarea class="form-control" name="MessageContent" style="height:300px" , placeholder = "Your Message:" ></textarea>
                            </div>
                            <div class="form-group">
                                <div class="btn btn-default btn-file">
                                    <i class="fas fa-paperclip"></i> Attachment
                                    <input type="file" name="attachment">
                                </div>
                                <p class="help-block">Max. 32MB</p>
                            </div>
                        </div>
                        @Html.HiddenFor(x => x.MessageDate)

                        <div class="card-footer">
                            <div class="float-right">
                                <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Draft</button>
                                <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Send</button>
                            </div>
                            <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> Discard</button>
                        </div>
                    }

                    <!-- /.card-footer -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>

    </div>
</section>
