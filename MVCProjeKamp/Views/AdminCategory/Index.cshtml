@using EntityLayer.Concrate
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1></h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">CATEGORY PAGE</h3>

            <div class="card-tools">

                <a class="btn btn-outline-secondary" href="/AdminCategory/AddCategory/"> <i class="fas fa-plus-circle"></i> Add Category</a>
            </div>
        </div>

        <div class="card-body">
            <table class="table table-striped projects MyDataTable">
                <thead>
                    <tr>
                        <th style="width: 3%">
                            #
                        </th>
                        <th style="width: 20%">
                            Title Name

                        </th>
                        <th style="width: 60%">
                            Description

                        </th>
                        <th class="nosort" style="width: 20%">
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <th>@category.CategoryID</th>
                            <td>@category.CategoryName</td>
                            <td>@category.CategoryDescription  </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-outline-primary btn-sm" title="Entries" href="#">
                                   Entries
                                    
                                    
                                </a>
                                <a class="btn btn-outline-info btn-sm" title="Edit" href="/AdminCategory/EditCategory/@category.CategoryID">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    
                                </a> 
                                <a class="btn btn-outline-danger btn-sm" title="Delete" href="/AdminCategory/DeleteCategory/@category.CategoryID">
                                    <i class="fas fa-trash">
                                    </i>
                                    
                                </a>
                            </td>
                        
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</section>



