@model List<EntityLayer.Concrate.Heading>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1></h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">MY TITLES</h3>
            <div class="card-tools">
                <a class="btn btn-outline-secondary" href="/WriterHeading/AddHeading/"> <i class="fas fa-plus-circle"></i> Add Title</a>
            </div>
        </div>

        <!--CARD BODY-->
        <div class="card-body">
            <table class="table table-striped projects MyDataTable">
                <thead>
                    <tr>
                        <th style="width: auto">
                            Date & Time
                        </th>
                        <th style="width: auto">
                            Title Name

                        </th>


                        <th style="width: auto" class="text-center">
                            Category
                        </th>

                        <th class="nosort" style="width: auto">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var heading in Model)
                    {                       
                    <tr>
                        <td>

                            @heading.HeadingDate

                        </td>
                        <td>
                            <a>
                                @heading.HeadingName
                            </a>

                        </td>


                        <td class="project-state">
                            <span class="badge badge-primary">@heading.Category.CategoryName</span>
                        </td>
                        <td class="project-actions text-right">
                            <a class="btn btn-outline-primary btn-sm" title="Entries" href="/WriterContent/GetContentsForHeading/@heading.HeadingID">
                               
                                Entries

                            </a>
                            <a class="btn btn-outline-info btn-sm" title="Edit" href="/WriterHeading/UpdateHeading/@heading.HeadingID">
                                <i class="fas fa-pencil-alt">
                                </i>

                            </a>
                            <a class="btn btn-outline-danger btn-sm" title="Delete" href="/WriterHeading/DeleteHeading/@heading.HeadingID">
                                <i class="fas fa-trash">
                                </i>

                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>


