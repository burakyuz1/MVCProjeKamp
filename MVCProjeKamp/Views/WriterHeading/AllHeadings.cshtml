@model List<EntityLayer.Concrate.Heading>
@{
    ViewBag.Title = "AllHeadings";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1></h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">ALL TITLES</h3>

        </div>


        <div class="card-body">
            <table class="table table-striped projects MyDataTable">
                <thead>
                    <tr>
                        <th style="width: auto">
                            Date & Time
                        </th>
                        <th style="width: 25%">
                            Title Name

                        </th>
                        <th style="width: auto">
                            Creator

                        </th>

                        <th style="width: auto" class="text-center">
                            Category
                        </th>

                        <th class="nosort" style="width: auto">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var heading in Model)
                    {
                        <tr>
                            <td>
                                @heading.HeadingDate
                            </td>
                            <td>
                                <a href="/WriterContent/GetContentsForHeading/@heading.HeadingID" style="color:inherit">
                                    @heading.HeadingName
                                </a>
                          
                            
                            </td>
                            <td>
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <img alt="Avatar" class="table-avatar" src="@heading.Writer.WriterPicture" /> <text class="lead">@heading.Writer.WriterName @heading.Writer.WriterSurname</text>
                                    </li>
                                </ul>
                            </td>

                            <td class="project-state">
                                <span class="badge badge-primary">@heading.Category.CategoryName</span>
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-outline-primary btn-sm" title="Entries" href="/WriterContent/GetContentsForHeading/@heading.HeadingID">
                                    Entries
                                    
                                    
                                </a>
                                <a class="btn btn-outline-info btn-sm" title="Add Text To Head" href="/WriterContent/AddContent/@heading.HeadingID">
                                    <i class="fas fa-plus">
                                    </i>
                                    
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>


