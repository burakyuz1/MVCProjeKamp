@model List<EntityLayer.Concrate.Heading>
@{
    ViewBag.Title = "AllHeadings";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1></h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">ALL TITLES</h3>

        </div>


        <div class="card-body">
            <table class="table table-striped projects MyDataTable">
                <thead>
                    <tr>
                        <th style="width: 1%">
                            #
                        </th>
                        <th style="width: 20%">
                            Title Name

                        </th>
                        <th style="width: 20%">
                            Creator

                        </th>

                        <th style="width: 8%" class="text-center">
                            Category
                        </th>

                        <th class="nosort" style="width: 20%">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var heading in Model)
                    {
                        <tr>
                            <td>
                                @heading.HeadingID
                            </td>
                            <td>
                                <a href="/WriterContent/GetContentsForHeading/@heading.HeadingID" style="color:inherit">
                                    @heading.HeadingName
                                </a>
                                <br />
                                <small>
                                    @heading.HeadingDate
                                </small>
                            </td>
                            <td>
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <img alt="Avatar" class="table-avatar" src="@heading.Writer.WriterPicture" /> <p class="lead">@heading.Writer.WriterName @heading.Writer.WriterSurname</p>
                                    </li>
                                </ul>
                            </td>

                            <td class="project-state">
                                <span class="badge badge-primary">@heading.Category.CategoryName</span>
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-outline-primary btn-sm" href="/WriterContent/GetContentsForHeading/@heading.HeadingID">
                                    <i class="fas fa-folder">
                                    </i>
                                    Entries
                                </a>
                                <a class="btn btn-outline-info btn-sm" href="/WriterContent/AddContent/@heading.HeadingID">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Add Text To Head
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>


