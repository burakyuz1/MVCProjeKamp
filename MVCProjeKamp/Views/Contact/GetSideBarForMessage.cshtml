<div class="col-md-3">
    <a href="/Message/NewMessage/" class="btn btn-primary btn-block mb-3">New Message</a>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Folders</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
             
                    <li class="nav-item active">
                        <a href="~/Contact/Index" class="nav-link">
                            <i class="fas fa-inbox"></i> Contact Inbox
                            <span class="badge bg-primary float-right">@ViewBag.UnreadCount</span>
                        </a>
                    </li>
           
                <li class="nav-item active">
                    <a href="/Message/Inbox/" class="nav-link">
                        <i class="fas fa-at"></i> Inbox
                        <span class="badge bg-primary float-right">@ViewBag.UnreadMessageCount</span>
                    </a>
                </li>


                <li class="nav-item">
                    <a href="/Message/Sendbox/" class="nav-link">
                        <i class="far fa-envelope"></i> Sent
                    </a>
                </li>
        
         
                <li class="nav-item">
                    <a href="/Message/GetDeletedMessages/" class="nav-link">
                        <i class="far fa-trash-alt"></i> Trash
                    </a>
                </li>
            </ul>
        </div>
   
    </div>


</div>