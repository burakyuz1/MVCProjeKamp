@model EntityLayer.ViewModels.HeadingCategoryViewModel

@{
    ViewBag.Title = "HeadingForm";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<div class="row">
    <div class="col mt-4">
        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title">Title Form</h3>


            </div>
            <div class="card-body">
                @using (Ajax.BeginForm("SaveHeading", "Heading", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "alert" }))
                {
                    <div class="form-group">
                        <label for="inputName">Name</label>
                        @Html.TextBoxFor(m => m.Heading.HeadingName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Heading.HeadingName)

                    </div>
                    <div class="form-group">
                        <label for="inputDescription">Category</label>
                        @Html.DropDownListFor(x => x.Heading.CategoryID, new SelectList(Model.Category, "CategoryID", "CategoryName"), "Please Choose a Category", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Heading.CategoryID)
                    </div>

                    <div class="row justify-content-between">
                        <div class="col-1 ">
                            <button type="submit" class="btn btn-success btn-lg">Save</button>
                        </div>
                        <div class="col-md-3">
                            <div id="alert"> </div>

                        </div>

                    </div>

                    @Html.HiddenFor(x => x.Heading.HeadingDate)
                    @Html.HiddenFor(x => x.Heading.HeadingID)
                    @Html.HiddenFor(m => m.Heading.WriterID)
                }
            </div>

        </div>

    </div>

</div>

@section scripts {

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}