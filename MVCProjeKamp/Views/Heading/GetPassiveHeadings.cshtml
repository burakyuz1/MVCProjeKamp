@model List<EntityLayer.Concrate.Heading>
@{
    ViewBag.Title = "Index";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}



<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1></h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">PASSIVE TITLES PAGE</h3>
           
        </div>

        <div class="card-body">
            <table id="tblPassiveHeadings" class="table table-striped projects MyDataTable">
                <thead>
                    <tr>
                        <th style="width: 3%">
                            #
                        </th>
                        <th style="width: 20%">
                            Title Name

                        </th>
                        <th style="width: 20%">
                            Creator

                        </th>

                        <th style="width: 15%" class="text-center">
                            Category
                        </th>

                        <th class="nosort" style="width: 20%">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var heading in Model)
                    {

                        <tr>
                            <td>
                                @heading.HeadingID
                            </td>
                            <td>
                                <a>
                                    @heading.HeadingName
                                </a>
                                <br />
                                <small>
                                    @heading.HeadingDate
                                </small>
                            </td>
                            <td>
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <img alt="Avatar" class="table-avatar" src="@heading.Writer.WriterPicture" /> <text class="lead">@heading.Writer.WriterName @heading.Writer.WriterSurname</text>
                                    </li>
                                </ul>
                            </td>

                            <td class="project-state">
                                <span class="badge badge-primary">@heading.Category.CategoryName</span>
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-outline-primary btn-sm" title="Titles" href="/Content/GetContents/@heading.HeadingID">
                                    
                                    Entries
                                </a>
                                <a class="btn btn-outline-info btn-sm" title="Edit" href="/heading/updateHeading/@heading.HeadingID">
                                    <i class="fas fa-pencil-alt">
                                    </i>

                                </a>

                                <a id="btnUnbanTitle"class="btn btn-outline-success btn-sm" data-id="@heading.HeadingID">
                                    <i class="fas fa-check">
                                    </i>

                                </a>


                            </td>
                        </tr>
                    }
                </tbody>
            </table>



        </div>

    </div>

</section>




